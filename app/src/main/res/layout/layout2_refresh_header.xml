<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/light_blue"
    android:gravity="bottom"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_refresh_arrow"
            android:layout_marginLeft="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/pull_icon_big"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/iv_refresh_loading"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:src="@drawable/refreshing"
            android:layout_marginLeft="60dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tv_refresh_hint"
            android:textSize="16dp"
            android:gravity="center"
            android:text="下拉刷新"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_refresh_hint"
            android:layout_marginRight="8dp"
            android:src="@drawable/refresh_succeed"
            android:id="@+id/iv_refresh_hint"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>
</RelativeLayout>