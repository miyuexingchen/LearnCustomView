<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal|bottom"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_header_arrow"
        android:src="@drawable/smart_ui_pullable_layout_indicate_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/iv_header_loading"
        android:visibility="gone"
        android:background="@drawable/refresh_loading_animation"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tv_header_hint"
        android:text="下拉刷新"
        android:layout_toRightOf="@id/iv_header_arrow"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
</RelativeLayout>